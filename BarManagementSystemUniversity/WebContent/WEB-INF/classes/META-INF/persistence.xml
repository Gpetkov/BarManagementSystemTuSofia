<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns='http://java.sun.com/xml/ns/persistence' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:schemaLocation='http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd'>
	<persistence-unit name="OrderStatus" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<non-jta-data-source></non-jta-data-source>
		<class>com.tu.sofia.bg.model.OrderStatus</class>
		<properties>
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver" />
			<property name="hibernate.connection.url"
				value="jdbc:postgresql://localhost:7777/BAR_MANAGEMENT_SYSTEM_DB" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.username" value="postgres" />
			<property name="hibernate.connection.password" value="121208014" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
			<property name="jboss.entity.manager.factory.jndi.name"
				value="BarManagementSystemDS" />
		</properties>
	</persistence-unit>
</persistence>
